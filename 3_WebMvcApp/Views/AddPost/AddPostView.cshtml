@model WebMvcApp.Models.BlogPostModel

@{
    var htmlAttrib = new Dictionary<string, object>();
    htmlAttrib.Add("class", "form-horizontal");
}

<div class="container-fluid">
    <div class="row bottom-margin">
        <div class="col-xs-12">
            <a href="/home/" class="btn btn-primary">Home</a>
        </div>
    </div>
    @using (Html.BeginForm("AddPost", "AddPost", FormMethod.Post, htmlAttrib))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-1" })
            <div class="col-sm-11">
                @Html.TextBoxFor(m => m.Title, new { @class= "form-control" })
                @Html.ValidationMessageFor(m => m.Title)
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
                @Html.TextAreaFor(m => m.Post, new { @class="form-control", rows = "20" })
                @Html.ValidationMessageFor(m => m.Post)
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
                <input type="submit" class="btn btn-primary" value="Submit" />
                <a href="/home/" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    }
</div>

